<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pt.isec.lj.galleon.RegisterActivity"
    android:orientation="vertical"
    android:background="@drawable/sea_opt">

    <!-- INICIO -->
    <!-- ICON -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/galleon_white"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Welcome Aboard!"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            />
    </LinearLayout>

    <!-- FILLER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"></LinearLayout>

    <!-- NOME -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:background="@mipmap/ic_user_white"/>
        <EditText
            android:id="@+id/txtRegName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="#fff"
            android:hint="Name"
            android:textColorHint="#ffffff"
            android:textSize="16dp"
            android:padding="12dp"/>
    </LinearLayout>

    <!-- EMAIL -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:background="@android:drawable/ic_dialog_email"/>

        <EditText
            android:id="@+id/txtRegEmail"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="#fff"
            android:hint="Email"
            android:textColorHint="#ffffff"
            android:textSize="16dp"
            android:padding="12dp"/>
    </LinearLayout>

    <!-- PASSWORD -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:background="@android:drawable/ic_lock_idle_lock"/>
        <EditText
            android:id="@+id/txtRegPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="16dp"
            android:padding="12dp"
            android:hint="Password"/>
    </LinearLayout>

    <!-- PASSWORD REPEAT-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:background="@android:drawable/ic_lock_idle_lock"/>
        <EditText
            android:id="@+id/txtRegPassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="#fff"

            android:textSize="16sp"
            android:padding="12dp"
            android:hint="Repeat Password"
            android:textColorHint="#fff"/>
    </LinearLayout>

    <!-- DATA NASC-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:background="@android:drawable/ic_menu_my_calendar"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:id="@+id/txtRegBDate"
            android:hint="Birth Date"
            android:textSize="16dp"
            android:textColor="#fff"
            android:padding="12dp"
            android:textColorHint="#fff"/>
    </LinearLayout>

    <TextView
        android:id="@+id/btnRegOk"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Sign me Up"
        android:textSize="16dp"
        android:textColor="#fff"
        android:textAlignment="center"
        android:background="@drawable/style"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:onClick="onRegister"/>
</LinearLayout>
