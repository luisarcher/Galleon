<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_group_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pt.isec.lj.galleon.CreateGroupPageActivity"
    android:orientation="vertical"
    android:background="@drawable/sea_opt">

    <!-- ICON -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="75dp"
            android:background="@drawable/ico_rudder"
            android:layout_gravity="center"
            android:contentDescription="@string/group_ok"
            />
    </LinearLayout>

    <!-- FILLER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grouppage_setup"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <!-- EMAIL -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtGroupName"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="#fff"
            android:hint="@string/group_name"
            android:textColorHint="#fff"
            android:textSize="16sp"
            android:padding="12dp"
            android:backgroundTint="@android:color/white"/>
    </LinearLayout>

    <!-- PASSWORD -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/txtGroupCat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="#fff"

            android:textColorHint="#fff"
            android:textSize="16sp"
            android:padding="12dp"
            android:hint="@string/group_cat"
            android:backgroundTint="@android:color/white"/>
    </LinearLayout>

    <TextView
        android:layout_width="230dp"
        android:layout_height="wrap_content"

        android:text="@string/group_ok"
        android:textSize="16sp"
        android:textColor="#fff"
        android:textAlignment="center"
        android:background="@drawable/style"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginTop="60dp"
        android:onClick="onGroupCreate"/>


</LinearLayout>
